{
  "name": "campsite",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "dev:frontend": "turbo run dev --filter=@campsite/frontend",
    "dev:backend": "turbo run dev --filter=@campsite/backend",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:performance": "playwright test --config=tests/performance/playwright.config.ts",
    "test:performance:ui": "playwright test --config=tests/performance/playwright.config.ts --ui",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "db:migrate": "cd supabase && supabase db push",
    "db:reset": "cd supabase && supabase db reset",
    "db:seed": "cd supabase && supabase db seed",
    "db:studio": "cd supabase && supabase studio"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@playwright/test": "^1.41.0",
    "@supabase/supabase-js": "^2.39.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.0",
    "jest": "^29.7.0",
    "pg": "^8.17.1",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
